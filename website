  <script>
    function filterCourses() {
      const searchInput = document.getElementById('searchInput').value.toLowerCase();
      const audienceFilter = document.getElementById('audienceFilter').value;
      const formatFilter = document.getElementById('formatFilter').value;
      const monthFilter = document.getElementById('monthFilter').value;

      const cards = document.getElementsByClassName('course-card');
      for (let card of cards) {
        const text = card.innerText.toLowerCase();
        const audience = card.getAttribute('data-audience');
        const format = card.getAttribute('data-format');
        const month = card.getAttribute('data-month');

        const matchesSearch = text.includes(searchInput);
        const matchesAudience = (audienceFilter === "all" || audience === audienceFilter);
        const matchesFormat = (formatFilter === "all" || format === formatFilter);
        const matchesMonth = (monthFilter === "all" || month === monthFilter);

        if (matchesSearch && matchesAudience && matchesFormat && matchesMonth) {
          card.style.display = "block";
        } else {
          card.style.display = "none";
        }
      }
    }
  </script>
